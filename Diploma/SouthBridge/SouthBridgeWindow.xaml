<Window x:Class="Diploma.SouthBridgeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Diploma"
        WindowState="Maximized"
        Title="South Bridge Interface" Height="500" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <local:RoundedButton Content="Information" Width="120" Height="40" Margin="5" Background="#add8e6"
                    Click="InfoButton_Click" FontSize="14"/>
            <local:RoundedButton Content="Simulation" Width="120" Height="40" Margin="5" Background="#add8e6"
                    Click="SimButton_Click" FontSize="14"/>
            <local:RoundedButton Content="Back" Width="120" Height="40" Margin="5" Background="#add8e6"
                    Click="BackButton_Click" FontSize="14"/>
        </StackPanel>

        <ContentControl x:Name="ContentArea" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
