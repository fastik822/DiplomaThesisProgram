<Window x:Class="Diploma.DMIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Diploma"
        WindowState="Maximized"
        Title="Direct Media Interface" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <local:RoundedButton Content="Довідка" Width="120" Height="40" Margin="5" Background="#add8e6" Click="InfoButton_Click" FontSize="14"/>
            <local:RoundedButton Content="Симуляція" Width="120" Height="40" Margin="5" Background="#add8e6" Click="SimButton_Click" FontSize="14"/>
            <local:RoundedButton Content="На головну" Width="120" Height="40" Margin="5" Background="#add8e6" Click="BackButton_Click" FontSize="14"/>
        </StackPanel>
        <ContentControl x:Name="ContentArea" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>